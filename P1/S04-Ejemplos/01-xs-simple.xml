<?xml version="1.0" encoding="UTF-8"?>

<!-- Comienzo de esquema -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <!-- Elemento raiz -->
    <xs:element name="tienda">
        
        <!-- Es de tipo complejo porque tiene otros elementos -->
        <xs:complexType>
            <!-- Elemento en orden -->
            <!-- En este caso como solo hay 1 nos da igual -->
            <xs:sequence>

                <!-- Producto: Tipo Simple: Cadena  -->
                <xs:element name="producto" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>

    </xs:element>
</xs:schema>